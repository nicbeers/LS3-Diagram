          <g id="throttle" class="part touchTarget" transform="translate(920,90)">
            <ellipse cx="0" cy="0" rx="40" ry="26" fill="#4a5a66"/>
            <text x="56" y="6" class="labelText" >Throttle Body</text>
          </g>

          <!-- Valve covers / heads left-->
