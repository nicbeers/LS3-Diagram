    <div id="canvasWrap" class="card">
      <div class="svgWrap">
        <!-- SVG simplified V8, with groups for parts to animate or highlight -->
        <svg id="svg" viewBox="0 0 1200 700" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="LS3 engine diagram">
